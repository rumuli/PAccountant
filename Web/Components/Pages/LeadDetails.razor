@using Domain.Entities
@using Application.Services.Leads
@page "/Leads/{Id:int}"
@inject ILeadService LeadService
@inject NavigationManager NavigationManager
<PageTitle>Lead Details</PageTitle>

<h1>Lead Details</h1>
<div>

@if (lead != null)
{
    <div class="card mt-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Lead Details</h3>
            <a href="/Leads" class="btn btn-secondary">Back to List</a>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@lead.Id</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@lead.FirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@lead.LastName</dd>            

                <dt class="col-sm-3">Company Name</dt>
                <dd class="col-sm-9">@lead.CompanyName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@lead.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@lead.Phone</dd>

                <dt class="col-sm-3">Source</dt>
                <dd class="col-sm-9">@lead.Source</dd>

                 <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@lead.Status</dd>

                 <dt class="col-sm-3">CreatedAt</dt>
                <dd class="col-sm-9">@lead.CreatedAt</dd>
            </dl>
            </div>
        </div>
    }
    else
    {
        <p>Lead not found.</p>
    }
    </div>
    @code {

        [Parameter]
         public int Id { get; set; }

        private Lead lead;
        protected override void OnInitialized()
        {
            lead = LeadService.GetLeadById(Id);
        }
    }