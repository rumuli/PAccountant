@* @page "/Customers/Create"   
@using Application.Services.Customers
@rendermode InteractiveServer
@inject ICustomerService CustomerService
@inject NavigationManager NavigationManager
@using Application.DTO 
@using System.ComponentModel.DataAnnotations

<PageTitle>Create Customer</PageTitle>

<!-- MudContainer: Responsive container with max-width constraint -->
<MudContainer MaxWidth="MaxWidth.Small" Class="py-8">
    
    <!-- Header Section with Title and Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-6">
        <MudText Typo="Typo.h4" Class="font-weight-bold">Create New Customer</MudText>
        <MudButton 
            Variant="Variant.Text" 
            Color="Color.Secondary" 
            StartIcon="@Icons.Material.Filled.ArrowBack"
            Href="/Customers">
            Back to List
        </MudButton>
    </div>

    <!-- MudCard: Main form container with elevation shadow -->
    <MudCard Class="elevation-1">
        <MudCardContent>
            
            <!-- EditForm: Blazor's form validation framework -->
            <EditForm Model="Model" OnValidSubmit="OnValidSubmit">
                <!-- DataAnnotationsValidator: Enables server-side validation based on DTO attributes -->
                <DataAnnotationsValidator />
               

                <!-- Name Field -->
                <MudTextField 
                    T="string"
                    Label="Customer Name"
                    Variant="Variant.Outlined"
                    @bind-Value="Model.Name"
                    Placeholder="Enter customer name"
                    HelperText="Full name of the customer"
                    For="@(() => Model.Name)"
                    Class="mb-4" />
                <ValidationMessage For="@(() => Model.Name)" />

                <!-- Email Field -->
                <MudTextField 
                    T="string"
                    Label="Email Address"
                    Variant="Variant.Outlined"
                    @bind-Value="Model.Email"
                    Placeholder="example@email.com"
                    HelperText="Valid email address"
                    For="@(() => Model.Email)"
                    Class="mb-4" />
                <ValidationMessage For="@(() => Model.Email)" />

                <!-- Phone Field -->
                <MudTextField 
                    T="string"
                    Label="Phone Number"
                    Variant="Variant.Outlined"
                    @bind-Value="Model.Phone"
                    Placeholder="(000) 000-0000"
                    HelperText="Customer contact number"
                    For="@(() => Model.Phone)"
                    Class="mb-4" />
                <ValidationMessage For="@(() => Model.Phone)" />

                <!-- Address Field -->
                <MudTextField 
                    T="string"
                    Label="Street Address"
                    Variant="Variant.Outlined"
                    @bind-Value="Model.Address"
                    Placeholder="123 Main Street"
                    HelperText="Full street address"
                    For="@(() => Model.Address)"
                    Class="mb-4" />
                <ValidationMessage For="@(() => Model.Address)" />

                <!-- City Field -->
                <MudTextField 
                    T="string"
                    Label="City"
                    Variant="Variant.Outlined"
                    @bind-Value="Model.City"
                    Placeholder="New York"
                    HelperText="City name"
                    For="@(() => Model.City)"
                    Class="mb-6" />
                <ValidationMessage For="@(() => Model.City)" />

                <!-- Action Buttons -->
                <div class="d-flex gap-3 justify-content-center mt-6">
                    <!-- Submit Button: Creates customer on valid form submission -->
                    <MudButton 
                        Variant="Variant.Filled" 
                        Color="Color.Primary" 
                        Size="Size.Medium"
                        StartIcon="@Icons.Material.Filled.Save"
                        ButtonType="ButtonType.Submit">
                        Create Customer
                    </MudButton>
                    
                    <!-- Cancel Button: Returns to customer list without saving -->
                    <MudButton 
                        Variant="Variant.Outlined" 
                        Color="Color.Default" 
                        Size="Size.Medium"
                        StartIcon="@Icons.Material.Filled.Cancel"
                        Href="/Customers">
                        Cancel
                    </MudButton>
                </div>
                
            </EditForm>

        </MudCardContent>
    </MudCard>
</MudContainer>


@code{
    
    private CreateCustomerDTO Model { get; set; } = new();
    
   
    private bool ShowErrors { get; set; } = false;

   
    private void OnValidSubmit()
    {
        try
        {
            
            CustomerService.CreateCustomer(Model);
            
           
            NavigationManager.NavigateTo("/Customers");
        }
        catch
        {
            ShowErrors = true;
        }
    }
} *@
